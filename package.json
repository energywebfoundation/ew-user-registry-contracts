    "ew-deployment": "0.0.2-beta02",
    "typedarray-to-buffer": "^3.1.5",
    "web3": "^1.0.0-beta.37",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
