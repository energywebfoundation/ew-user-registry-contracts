    "ew-utils-deployment": "0.0.102",
    "typedarray-to-buffer": "^3.1.5",
    "web3": "1.0.0-beta.37",
    "yaeti": "^1.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.28",
    "@types/web3": "1.0.14",
    "chai": "^4.1.2",
    "ganache-cli": "^6.1.8",
    "mocha": "^5.2.0",
    "sloffle": "1.3.4-beta02",
    "typescript": "^2.9.2",
    "typescript-json-schema": "^0.31.0"
  },
  "postinstall": "rm -f node_modules/web3/index.d.ts"
}